extends ../layouts/common

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name
            input.form-control(id="name" type="text" name="name" value= values ? values.name : '')
        .form-group
            label(for="phone") Phone
            input.form-control(id="phone" type="phone" name="phone" value= values ? values.phone : '')
        button(type="submit" class="btn btn-primary") Create
